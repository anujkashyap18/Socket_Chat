<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ConnectionActivity">

    <LinearLayout
        android:padding="32dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvIp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="15dp"
            android:text="Your IP"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/showIPtextId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_background"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginTop="12dp"
            android:text="0.0.0.0"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="16sp" />


        <com.google.android.material.textfield.TextInputEditText
            android:layout_marginTop="18dp"
            android:background="@drawable/edit_text_background"
            android:layout_width="match_parent"
            android:paddingStart="12dp"
            android:drawablePadding="4dp"
            android:hint="Your Port Number"
            android:imeOptions="actionDone"
            android:textSize="15sp"
            android:digits="0123456789"
            android:textColor="@color/black"
            android:inputType="number"
            android:layout_height="56dp"
            android:id="@+id/myPortEditText"/>

        <com.google.android.material.textfield.TextInputEditText
            android:layout_marginTop="18dp"
            android:background="@drawable/edit_text_background"
            android:layout_width="match_parent"
            android:paddingStart="12dp"
            android:drawablePadding="4dp"
            android:hint="Receiver's IP address"
            android:imeOptions="actionDone"
            android:textSize="15sp"
            android:digits="0123456789."
            android:textColor="@color/black"
            android:inputType="number"
            android:layout_height="56dp"
            android:id="@+id/ipEditText"/>

        <com.google.android.material.textfield.TextInputEditText
            android:layout_marginTop="18dp"
            android:background="@drawable/edit_text_background"
            android:layout_width="match_parent"
            android:paddingStart="12dp"
            android:drawablePadding="4dp"
            android:hint="Receiver's port No."
            android:imeOptions="actionDone"
            android:textSize="15sp"
            android:digits="0123456789"
            android:textColor="@color/black"
            android:inputType="number"
            android:layout_height="56dp"
            android:id="@+id/portEditText"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/connectButton"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            app:cornerRadius="12dp"
            android:text="Start Chat"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:iconTint="@color/black"
            app:iconGravity="textStart"
            app:backgroundTint="@color/black"
            android:layout_height="64dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>